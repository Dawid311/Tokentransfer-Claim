{
  "functions": {
    "api/webhook.js": {
      "memory": 512,
      "maxDuration": 30
    },
    "api/dashboard.js": {
      "memory": 256,
      "maxDuration": 10
    },
    "api/status.js": {
      "memory": 256,
      "maxDuration": 15
    },
    "api/index.js": {
      "memory": 128,
      "maxDuration": 5
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/index"
    },
    {
      "source": "/dashboard",
      "destination": "/api/index"
    }
  ],
  "env": {
    "PRIVATE_KEY": "@private_key",
    "ETH_AMOUNT": "0.0000001"
  }
}
